<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.org.octopus.action_bar"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="cn.org.octopus.action_bar.MainActivity"
            android:label="ActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity 
            android:name="cn.org.octopus.action_bar.TabNavigationActivity"
            android:label="ActionBar Tab 导航示例"/>
        
        <activity 
            android:name="cn.org.octopus.action_bar.ListNavigationActivity"
            android:label="ActionBar List 导航示例"/>
    </application>

</manifest>
